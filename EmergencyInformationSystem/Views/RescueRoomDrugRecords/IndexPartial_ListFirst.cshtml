@model IEnumerable<EmergencyInformationSystem.Models.ViewModels.RescueRoomDrugRecords.IndexPartial.ItemFirst>

<table class="table table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th class="text-center" width="15%">
                <span>处方时间</span>
            </th>
            <th class="text-center">
                <span>品名</span>
            </th>
            <th class="text-center" width="10%">
                <span>用量</span>
            </th>
            <th class="text-center" width="10%">
                <span>用量单位</span>
            </th>
            <th class="text-center" width="10%">
                <span>用法</span>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th colspan="5">
                    <br />
                </th>
            </tr>

            @Html.Partial("IndexPartial_ListSecond", item.List)
        }
    </tbody>   
</table>