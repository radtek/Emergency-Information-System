@model IEnumerable<IGrouping<Guid, EmergencyInformationSystem.Models.Domains.Entities.RescueRoomDrugRecord>>

<table class="table table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.First().PrescriptionTime)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.First().ProductCode)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.First().ProductName)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.First().DosageQuantityFull)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.First().Usage)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @Html.Partial("IndexPartialPart", item)
        }
    </tbody>
</table>