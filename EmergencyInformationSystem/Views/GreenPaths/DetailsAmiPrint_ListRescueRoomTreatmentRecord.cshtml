@model IEnumerable<EmergencyInformationSystem.Models.ViewModels.GreenPaths.DetailsAmiPrint.ItemRescueRoomTreatmentRecord>

<tr>
    <td colspan="12">
        <div class="print-table-header">治疗信息</div>
    </td>
</tr>
<tr class="text-center">
    <td colspan="3">
        @Html.DisplayNameFor(model => model.PrescriptionTime)
    </td>
    <td colspan="1">
        @Html.DisplayNameFor(model => model.ProductCode)
    </td>
    <td colspan="6">
        @Html.DisplayNameFor(model => model.ProductName)
    </td>
    <td colspan="2">
        @Html.DisplayNameFor(model => model.DosageQuantity)
    </td>
</tr>

@if (Model.Count() == 0)
{
    <tr>
        <td colspan="12">
            无
        </td>
    </tr>
}
else
{
    foreach (var item in Model)
    {
        <tr class="text-center">
            <td colspan="3">
                @Html.DisplayFor(c => item.PrescriptionTime)
            </td>
            <td colspan="1">
                @Html.DisplayFor(c => item.ProductCode)
            </td>
            <td colspan="6">
                @Html.DisplayFor(c => item.ProductName)
            </td>
            <td colspan="2">
                @Html.DisplayFor(c => item.DosageQuantity)
            </td>
        </tr>
    }
}