@model EmergencyInformationSystem.Models.Domains.Entities.GreenPathAmi

@{
    ViewBag.Title = "绿色通道信息表 - 急性心肌梗死 - 编辑";
}

<div class="container">
    <ol class="breadcrumb">
        <li>@Html.ActionLink("主页", "Index", "Home", null, null)</li>
        <li>@Html.ActionLink("抢救室病例信息一览表", "Index", "RescueRoomInfos", null, null)</li>
        <li>@Html.ActionLink("抢救室病例信息表", "Details", "RescueRoomInfos", new { id = Model.RescueRoomInfoId }, null)</li>
        <li>@Html.ActionLink("绿色通道信息表 - 急性心肌梗死", "DetailsAmi", new { id = Model.GreenPathAmiId }, null)</li>
        <li class="active">编辑</li>
    </ol>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(false, "", new { @class = "text-danger alert alert-danger" })

    @Html.HiddenFor(model => model.GreenPathAmiId)
    @Html.HiddenFor(model => model.RescueRoomInfoId)
    @Html.HiddenFor(model => model.TimeStamp)

    <div class="container">
        @*标题*@
        <div class="row RescueRoomMainTitleRow">
            <div class="h2 RescueRoomMainTitleCell">
                @ViewBag.Title
            </div>
        </div>

        @*眉栏*@
        @Html.Action("Header", "RescueRoomInfos", new { id = Model.RescueRoomInfoId })

        <hr />

        @*信息*@
        <div class="row RescueRoomSecondTitleRow">
            <div class="col-md-12 RescueRoomSecondTitle">
                信息
            </div>

            <div class="form-group  col-md-offset-1 RescueRoomSecondTitleEditBlock">
                @Html.LabelFor(model => model.OccurrenceTime, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="datetime-local" name="OccurrenceTime" class="form-control" value=@(Model.OccurrenceTime?.ToString("yyyy-MM-ddTHH:mm")) />
                    @Html.ValidationMessageFor(model => model.OccurrenceTime, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <hr />

        @*操作*@
        <div class="row RescueRoomSecondTitleRow">
            <div class="col-md-12 RescueRoomSecondTitle">
                操作
            </div>

            <div class="form-group  col-md-offset-1 RescueRoomSecondTitleEditBlock">
                @Html.LabelFor(model => model.EcgFirstTime, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="datetime-local" name="EcgFirstTime" class="form-control" value=@(Model.EcgFirstTime?.ToString("yyyy-MM-ddTHH:mm")) />
                    @Html.ValidationMessageFor(model => model.EcgFirstTime, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group  col-md-offset-1 RescueRoomSecondTitleEditBlock">
                @Html.LabelFor(model => model.EcgSecondTime, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="datetime-local" name="EcgSecondTime" class="form-control" value=@(Model.EcgSecondTime?.ToString("yyyy-MM-ddTHH:mm")) />
                    @Html.ValidationMessageFor(model => model.EcgSecondTime, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <hr />

        @*附加*@
        <div class="row RescueRoomSecondTitleRow">
            <div class="col-md-12 RescueRoomSecondTitle">
                附加
            </div>

            <div class="form-group  col-md-offset-1 RescueRoomSecondTitleEditBlock">
                @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(c => c.Remarks, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <hr />

        @*完成*@
        <div class="row RescueRoomSecondTitleRow">
            <div class="col-md-12 RescueRoomSecondTitle">
                完成
            </div>

            <div class="form-group  col-md-offset-1 RescueRoomSecondTitleEditBlock">
                @Html.LabelFor(model => model.FinishPathTime, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="datetime-local" name="FinishPathTime" class="form-control" value=@(Model.FinishPathTime?.ToString("yyyy-MM-ddTHH:mm")) />
                    @Html.ValidationMessageFor(model => model.FinishPathTime, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group  col-md-offset-1 RescueRoomSecondTitleEditBlock">
                @Html.LabelFor(model => model.Problem, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(c => c.Problem, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Problem, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <hr />

        @*按钮*@
        <div class="form-group RescueRoomSecondTitleSubmitBlock">
            <div class="col-md-offset-1 col-md-9">
                <input type="submit" value="确定" class="btn btn-info" />
            </div>
        </div>
    </div>
}