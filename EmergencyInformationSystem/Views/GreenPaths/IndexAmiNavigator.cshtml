@model EmergencyInformationSystem.Models.ViewModels.GreenPaths.IndexAmi.Route

<div class="btn-group" style="padding-bottom:10px">
    @if (Model.Page > 1)
    {
        @Html.ActionLink("首页", "IndexAmi", Model.GetRoute(1), new { @class = "btn btn-default btn-show-modal" });
        @Html.ActionLink("上一页", "IndexAmi", Model.GetRoute(Model.Page - 1), new { @class = "btn btn-default btn-show-modal" });
    }
    else
    {
        @Html.ActionLink("首页", "", "", new { @class = "btn btn-default", disabled = "disabled" });
        @Html.ActionLink("上一页", "", "", new { @class = "btn btn-default", disabled = "disabled" });
    }

    <label class="btn btn-info">
        第 @(Model.Page) 页 共 @(Model.MaxPage) 页 （共 @(Model.Count) 项）
    </label>

    @if (Model.Page < Model.MaxPage)
    {
        @Html.ActionLink("下一页", "IndexAmi", Model.GetRoute(Model.Page + 1), new { @class = "btn btn-default btn-show-modal" });
        @Html.ActionLink("末页", "IndexAmi", Model.GetRoute(Model.MaxPage), new { @class = "btn btn-default btn-show-modal" });
    }
    else
    {
        @Html.ActionLink("下一页", "", "", new { @class = "btn btn-default", disabled = "disabled" });
        @Html.ActionLink("末页", "", "", new { @class = "btn btn-default", disabled = "disabled" });
    }

    @*@Html.ActionLink("新增", "Create", null, new { @class = "btn btn-primary btn-show-modal" })*@
</div>