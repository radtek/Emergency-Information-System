@model IEnumerable<EmergencyInformationSystem.Models.ViewModels.Reports.StatisticsMonth.DuringFirst>

<table class="table table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th class="text-center alert-success">
                停留时长
            </th>
            <th class="text-center alert-success" style="width:15%">
                数量
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.DuringGroupName, "IndexDuring", new { item.DuringMin, item.DuringMax, item.Time }, new { target = "_blank" })
                </td>
                <td>
                    @Html.DisplayFor(model => item.Count)
                </td>
            </tr>

            @Html.Partial("StatisticsMonthDuringSecond", item.List)
        }
    </tbody>
</table>