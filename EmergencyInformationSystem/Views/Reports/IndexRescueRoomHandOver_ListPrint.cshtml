@model IEnumerable<EmergencyInformationSystem.Models.ViewModels.Reports.IndexRescueRoomHandOver.Item>

<table class="table table-hover table-condensed table-bordered">
    <thead>
        <tr>
            <th class="text-center" width="80">
                @Html.DisplayNameFor(model => model.PatientName)
            </th>
            <th class="text-center" width="80">
                @Html.DisplayNameFor(model => model.OutPatientNumber)
            </th>
            <th class="text-center" width="70">
                @Html.DisplayNameFor(model => model.Sex)
            </th>
            <th class="text-center" width="70">
                @Html.DisplayNameFor(model => model.ReceiveAgeName)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.DiagnosisNameOrigin)
            </th>
            <th class="text-center" width="130">
                @Html.DisplayNameFor(model => model.InDepartmentTime)
            </th>
            <th class="text-center" width="60">
                @Html.DisplayNameFor(model => model.BedNameFull)
            </th>
            <th class="text-center" width="80">
                @Html.DisplayNameFor(model => model.GreenPathCategoryNameFull)
            </th>
            <th class="text-center" width="100">
                @Html.DisplayNameFor(model => model.Antibiotic)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            <th class="text-center" width="100">
                @Html.DisplayNameFor(model => model.DestinationFirstName)
            </th>
            <th class="text-center" width="100">
                @Html.DisplayNameFor(model => model.DestinationSecondName)
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.PatientName)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.OutPatientNumber)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Sex)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.ReceiveAgeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiagnosisNameOrigin)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.InDepartmentTime)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.BedNameFull)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.GreenPathCategoryNameFull)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Antibiotic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remarks)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.DestinationFirstName)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.DestinationSecondName)
                </td>
            </tr>
        }
    </tbody>
</table>