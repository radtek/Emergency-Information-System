@model IEnumerable<EmergencyInformationSystem.Models.ViewModels.Reports.StatisticsMonth.DestinationFirst>

<table class="table table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th class="text-center alert-success">
                去向
            </th>
            <th class="text-center alert-success" style="width:15%">
                数量
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.DestinationCategoryNameConcat, "IndexDestination", new { item.IsClassifiedToInDepartment, item.IsClassifiedToOutDepartment, item.IsClassifiedLeave, item.IsClassifiedToOther, item.Time }, new { target = "_blank" })
                </td>
                <td>
                    @Html.DisplayFor(model => item.Count)
                </td>
            </tr>

            @Html.Partial("StatisticsMonthDestinationSecond", item.List)
        }
    </tbody>
</table>