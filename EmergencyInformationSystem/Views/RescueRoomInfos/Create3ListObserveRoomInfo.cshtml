@model IEnumerable<EmergencyInformationSystem.Models.ViewModels.RescueRoomInfos.Create.ItemObserveRoomInfo>

@if (Model.Count() > 0)
{
    <span>最近的留观室记录：</span>
    <table class="table table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.ReceiveTime)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.InDepartmentTime)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.OutDepartmentTime)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.BedNameFull)
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.ReceiveTime)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.InDepartmentTime)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.OutDepartmentTime)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.BedNameFull)
                    </td>
                    <td class="text-center">
                        @if (item.IsUsable)
                        {
                            @Html.ActionLink("关联", "Create4", new { item.OutPatientNumber, item.JZID, item.GHXXID, item.BRXXID, item.KDJID, previousObserveRoomInfoId = item.ObserveRoomInfoId }, new { @class = "label label-default btn-show-modal" })
                        }
                        else
                        {
                            @item.DisplayText
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}